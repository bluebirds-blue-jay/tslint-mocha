{
  "name": "tslint-mocha",
  "version": "1.0.0-alpha",
  "description": "TSLint rules for Mocha test runner",
  "main": "dist/index.js",
  "private": false,
  "keywords": [
    "tslint",
    "mocha"
  ],
  "author": "Andrey Lipatkin <lipatkin@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Litee/tslint-mocha"
  },
  "devDependencies": {
    "@types/node": "^10.12.18",
    "@types/shelljs": "^0.8.2",
    "shelljs": "^0.8.3",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "typescript": "^3.2.4"
  },
  "peerDependencies": {
    "tslint": ">=5.1.0",
    "typescript": "^2.1.0 || ^3.0.0"
  },
  "engines": {
    "node": ">=4"
  },
  "dependencies": {},
  "scripts": {
    "clean": "rm -rf dist",
    "lint": "tslint -p ./tsconfig.test.json",
    "lint:fix": "npm run lint -- --fix",
    "build": "tsc",
    "test": "npm run clean && npm run lint && npm run build && node -r ts-node/register ./test/testRunner.ts"
  }
}
