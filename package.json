{
  "name": "@bluejay/tslint-mocha",
  "version": "1.0.3",
  "description": "TSLint rules for Mocha test runner",
  "main": "dist/index.js",
  "private": false,
  "keywords": [
    "tslint",
    "mocha"
  ],
  "author": "Andrey Lipatkin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bluebirds-blue-jay/tslint-mocha"
  },
  "devDependencies": {
    "@types/node": "^10.14.8",
    "@types/shelljs": "^0.8.5",
    "shelljs": "^0.8.3",
    "ts-node": "^8.2.0",
    "tslint": "^5.17.0",
    "typescript": "^3.5.1"
  },
  "peerDependencies": {
    "tslint": ">=5.1.0",
    "typescript": "^2.1.0 || ^3.0.0 || ^4.0.0"
  },
  "engines": {
    "node": ">=4"
  },
  "dependencies": {},
  "scripts": {
    "clean": "rm -rf dist",
    "lint": "tslint -p ./tsconfig.test.json",
    "lint:fix": "npm run lint -- --fix",
    "build": "tsc",
    "test": "npm run clean && npm run lint && npm run build && node -r ts-node/register ./test/testRunner.ts"
  }
}
